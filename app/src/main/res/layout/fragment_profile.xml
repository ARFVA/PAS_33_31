<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#1B263B">

    <TextView
        android:text="Profile Pembuat Project"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FAFAFA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/dranixx"
            android:layout_marginEnd="80dp"
            android:scaleType="centerCrop"

            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/arfva"
            android:layout_marginStart="20dp"
            android:scaleType="centerCrop"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rajendra Ghasia Demarco"
            android:layout_marginEnd="65dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FAFAFA"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rifat Arfa Pramana"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FAFAFA"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31 / 10 PPLG 1"
            android:layout_marginEnd="100dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FAFAFA"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="33 / 10 PPLG 1"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FAFAFA"/>


    </LinearLayout>

</LinearLayout>
